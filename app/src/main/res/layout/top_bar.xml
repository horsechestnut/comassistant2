<?xml version="1.0" encoding="utf-8"?><!--

top bar

-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@android:color/background_dark"
    android:baselineAligned="false"
    android:paddingTop="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_connect"
            android:layout_width="@dimen/fps_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:src="@drawable/disconnect" />

        <TextView
            android:id="@+id/text_con"
            android:layout_width="@dimen/fps_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="0dp"
            android:background="@layout/simpleframe"
            android:gravity="center"
            android:text="DIS"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_h_trigger"
            android:layout_width="@dimen/trigger_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Standard "
            android:textColor="#55FF55"
            android:textSize="@dimen/default_text_size"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textVtrigger"
            android:layout_width="@dimen/trigger_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="RealTime"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF5555"
            android:textSize="@dimen/default_text_size"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_chv"
            android:layout_width="@dimen/ps_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="HV:"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#55FF55"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_rhv"
            android:layout_width="@dimen/ps_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="HV"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF5555"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_clv"
            android:layout_width="@dimen/division_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginRight="12dp"
            android:text="LV:"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#55FF55"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_rlv"
            android:layout_width="@dimen/division_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="LV:"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF5555"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_cvc"
            android:layout_width="@dimen/vpp_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="PgID:"
            android:gravity="center"
            android:textColor="#55FF55"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_rcv"
            android:layout_width="@dimen/vpp_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="PgID"
            android:gravity="center"
            android:textColor="#FF5555"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_ty"
            android:layout_width="@dimen/vrms_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Y:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_tc"
            android:layout_width="@dimen/vrms_text_width"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="X:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:weightSum="10"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_rec"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="0dp"
            android:text="Rec:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_wcounter"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="0dp"
            android:text="War:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="45dp"
        android:layout_marginLeft="30dp"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/waring"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/war2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:weightSum="10"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            >

            <ImageView
                android:id="@+id/img_trigger"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/slope_up" />

            <ImageView
                android:id="@+id/img_range"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/over_range_in" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_run_stop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="2dp"
            android:layout_marginRight="12dp"
            android:background="@layout/simpleframe"
            android:gravity="center"
            android:text="RUN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#00FF00"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:visibility="gone"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_moni"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="模拟:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_text_size"
            android:typeface="normal" />

    </LinearLayout>

</LinearLayout>