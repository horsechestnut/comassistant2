<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/voltage_division_titile_text"
        android:text="@string/select_time_division"
        android:padding="20dp"
        android:textColor="@android:color/holo_blue_dark"
        tools:text="Select  time division" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/v_divider_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ListView
            android:id="@+id/time_dialog_listView_0"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/time_dialog_list_width">
        </ListView>

        <View
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_width="1px" />

        <ListView
            android:id="@+id/time_dialog_listView_1"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/time_dialog_list_width">
        </ListView>

        <View
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_width="1px" />

        <ListView
            android:id="@+id/time_dialog_listView_2"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/time_dialog_list_width">
        </ListView>

        <View
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_width="1px" />

        <ListView
            android:id="@+id/time_dialog_listView_3"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/time_dialog_list_width">
        </ListView>

    </LinearLayout>
</LinearLayout>
